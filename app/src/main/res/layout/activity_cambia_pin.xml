<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".actividades.CambiaPin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/azulPrimario"
        android:gravity="center_horizontal"
        android:text="CAMBIAR PIN DE ACCESO"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/cp_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/cp_nomUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="NOMBRE USUARIO"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Pin Actual" />

        <EditText
            android:id="@+id/cp_PinActual"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nuevo Pin" />

        <EditText
            android:id="@+id/cp_PinNuevo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Reescriba Nuevo Pin" />

        <EditText
            android:id="@+id/cp_PinNuevo2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="8" />


    </LinearLayout>

    <Button
        android:id="@+id/cp_btnCambiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cambiar" />


</LinearLayout>